{
  "name": "loadup",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:unit": "jest --testPathPattern=.*\\.unit\\.ts$",
    "test:integration": "jest --testPathPattern=.*\\.integration\\.ts$",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build": "npm run build:database && npm run build:api && npm run build:admin",
    "build:database": "cd packages/database && npm run build",
    "build:api": "cd packages/api && npm run build",
    "build:admin": "cd apps/admin-dashboard && npm run build",
    "dev": "turbo dev",
    "db:setup-test": "node --loader ts-node/esm scripts/setup-test-db.ts",
    "setup:demo": "node scripts/setup-demo.js",
    "reset:demo": "node scripts/reset-demo.js",
    "fix:pg-imports": "node scripts/fix-pg-imports.js",
    "fix:module-imports": "node scripts/fix-module-imports.js"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^0.3.17",
    "@loadup/shared": "file:packages/shared",
    "@radix-ui/react-select": "^2.1.6",
    "@sentry/nextjs": "^9.5.0",
    "@types/pg": "^8.11.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.40.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.482.0",
    "next": "14.1.0",
    "next-auth": "^4.24.5",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.56",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  }
}
